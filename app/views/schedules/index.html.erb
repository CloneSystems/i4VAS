<% title "Schedules" %>

<table>
  <tr>
    <th>Name</th>
    <th>Comment</th>
    <th>First Time</th>
    <th>Period Amount</th>
    <th>Period Unit</th>
    <th>Duration Amount</th>
    <th>Duration Unit</th>
  </tr>
  <% for schedule in @schedules %>
    <tr>
      <td><%= schedule.name %></td>
      <td><%= schedule.comment %></td>
      <td><%= schedule.first_time %></td>
      <td><%= schedule.period_amount %></td>
      <td><%= schedule.period_unit %></td>
      <td><%= schedule.duration_amount %></td>
      <td><%= schedule.duration_unit %></td>
      <td><%#= link_to "Show", schedule %></td>
      <td><%#= link_to "Edit", edit_schedule_path(schedule) %></td>
      <td><%#= link_to "Destroy", schedule, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Schedule", new_schedule_path %></p>
