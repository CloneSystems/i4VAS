<h1>Listing reports</h1>

<table>
  <tr>
    <th>Task</th>
    <th>Task name</th>
    <th>Status</th>
    <th>Started at</th>
    <th>Ended at</th>
    <th>Result count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= report.task_id %></td>
    <td><%= report.task_name %></td>
    <td><%= report.status %></td>
    <td><%= report.started_at %></td>
    <td><%= report.ended_at %></td>
    <td><%= report.result_count %></td>
    <td><%= link_to 'Show', report %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

