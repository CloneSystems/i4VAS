<h1>Scan Targets</h1>
<p><%= link_to 'new Target', new_scan_target_path %></p>
<table cellspacing="2" cellpadding="4">
  <tr style="text-align:left; vertical-align:bottom">
    <th>Name</th>
    <th>Comment</th>
    <th>Hosts</th>
		<th>IPs</th>
    <th>Ports</th>
    <th>In use</th>
    <th></th>
    <th></th>
  </tr>
	<% @scan_targets.each do |scan_target| %>
	  <tr>
	    <td><%= scan_target.name %></td>
	    <td><%= scan_target.comment %></td>
	    <td>
				<% scan_target.hosts.each do |host| %>
						<%= host %><br />
				<% end %>
			</td>
			<td><%= scan_target.max_hosts %></td>
	    <td><%= scan_target.port_range %></td>
	    <td><%= scan_target.in_use %></td>
	    <%#= link_to 'edit', edit_scan_target_path(scan_target.id) %>
			<% if scan_target.in_use > 0 %>
  				<td style="color:#c0c0c0">delete</td>
			<% else %>
	    		<td><%= link_to 'delete', scan_target_path(scan_target.id), :confirm => 'Are you sure?', :method => :delete %></td>
			<% end %>
	  </tr>
	<% end %>
</table>
