<%= form_for @task do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
	      <% @task.errors.full_messages.each do |msg| %>
	        <li><%= raw(msg) %></li>
	      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :maxlength => 80 %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment, :rows => 5, :cols => 80 %>
  </div>
  <div class="field">
    Scan Config<br />
		<%= collection_select(:task, :config_id, ScanConfig.selections, :id, :name, {}, {:disabled => true}) %>
  </div>
  <div class="field">
    Scan Target<br />
		<%= collection_select(:task, :target_id, ScanTarget.selections, :id, :name, {}, {:disabled => true}) %>
  </div>
	<br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
